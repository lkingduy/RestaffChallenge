<body class="register-page sidebar-collapse">
  <div class="page-header" style="background-image: url('img/login-image.jpg');">
    <div class="filter"></div>
    <div class="container mt0px">
      <div class="row">
        <div class="col-lg-4 ml-auto mr-auto">
          <div class="card card-register">
            <h3 class="title mx-auto" style="margin: 0px">Sign Up</h3>
            <form id="register-form" class="register-form" accept-charset="UTF-8">
                <br/><div class="error" style="margin-bottom: 0px"></div>
              <label></label>
              <input type="text" class="form-control" name="username" placeholder="Username">
              <label></label>
              <input type="password" class="form-control" name="password" placeholder="Password">
              <label></label>
              <input type="password" class="form-control" name="confirmPassword" placeholder="Re-Password">
              <label></label>
              <input type="text" class="form-control" name="fullname" placeholder="Fullname">
              <button class="btn btn-danger btn-block btn-round">Register</button>
            </form>
            <!-- <div class="forgot">
              <a href="#" class="btn btn-link btn-danger">Forgot password?</a>
            </div> -->
          </div>
        </div>
      </div>
    </div>
    <div class="footer register-footer text-center">
